<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM02REC.Views.Registrar">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
        <StackLayout>
            <Image Margin="0,20,0,0"  Source="https://cdn-icons-png.flaticon.com/512/2422/2422612.png" HorizontalOptions="Center" />
            <Entry Margin="0,50,0,0" Placeholder="Usuario" x:Name="login" />
            <Entry Placeholder="Contraseña" IsPassword="True" x:Name="pass" />

            <Label Text="" />
            <Button CornerRadius="190"  Margin="0,10,0,0"  TextColor="White"
                    BackgroundColor="CadetBlue" Text="Registrarse" x:Name="registrar" Clicked="btnguardar_Clicked" />
        </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>